<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="30dp"
    android:orientation="vertical"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageView_fragment_item_photo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/textView_fragment_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/textView_fragment_item_desc"
        android:textSize="18sp"

        android:textColor="@android:color/black"
        android:text="Name"

        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/textView_fragment_item_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imageView_fragment_item_photo"
        app:layout_constraintStart_toEndOf="@id/textView_fragment_item_name"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:text="Description"
        android:gravity="center_horizontal"
        />


</androidx.constraintlayout.widget.ConstraintLayout>